{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      "email-templates/**/*",
      {
        "include": "../public/img/avatar/**/*",
        "outDir": "dist/public",
        "watchAssets": true
      }
    ]
  }
}
